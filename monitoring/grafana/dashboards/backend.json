        "w": 24,
        "x": 0,
        "y": 0
      },
      "panels": []
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Request Rate by Handler",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 1
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m])) by (handler)",
          "refId": "A",
          "legendFormat": "{{handler}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 1,
            "fillOpacity": 10,
            "showPoints": "never",
            "stacking": {
              "mode": "none"
            }
          },
          "unit": "reqps"
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["lastNotNull", "mean"]
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
